<h1>Create a new event</h1>
<%= form_for :event, :url => events_path do |f| %>
    <%= f.label :name %>
    <%= f.text_field :name %>
    <%= f.label :location %>
    <%= f.text_field :location %>
    <%= f.label :date %>
    <%= f.text_field :date %>
    <%= f.label :description %>
    <%= f.text_area :description %>
    <%= f.submit %>
<% end %>